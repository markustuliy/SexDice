<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">
    <ImageView
        android:id="@+id/imgPlaylistItemBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:maxHeight="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_3" />

    <LinearLayout
        android:id="@+id/layout0top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <EditText
                    android:id="@+id/ETName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:fontFamily="@font/philosopher_bold_italic"
                    android:inputType="textPersonName"
                    android:text="Имя парня"
                    android:textAlignment="center"
                    android:textColor="#00FFF7"
                    android:textColorHint="#F4EAEA"
                    app:backgroundTint="#00FFF7" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LT2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LT1"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">

                <EditText
                    android:id="@+id/ETName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field2"
                    android:ems="10"
                    android:fontFamily="@font/philosopher_bold_italic"
                    android:inputType="textPersonName"
                    android:text="Имя девушки"
                    android:textAlignment="center"
                    android:textColor="#FF00DD"
                    app:backgroundTint="#FF00DD" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout0top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout3top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout2top"
        android:gravity="center"
>


        <ImageButton
            android:id="@+id/SettingButton"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:fontFamily="@font/philosopher_bold"
            android:textColor="@color/black"
            android:background="@drawable/setting_button" />

        <ImageButton
            android:id="@+id/SexDiceButton"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:background="@drawable/dice_button"
            android:fontFamily="@font/philosopher_bold"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/SexRouletteButton"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:background="@drawable/roulete_button"
            android:fontFamily="@font/philosopher_bold"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yandex.mobile.ads.banner.BannerAdView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>